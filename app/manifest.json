{
    "name": "__MSG_appName__",
    "version": "0.0.22",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/rift-16.png",
        "128": "images/rift-128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": {
            "32": "images/required-32.png"
        },
        "default_title": "rift",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "proxy",
        "storage",
        "tabs",
        "webRequest",
        "http://*/*",
        "https://*/*"
    ]
}